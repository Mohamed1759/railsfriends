

<% if user_signed_in? %>

<h1>Friend List</h1>

<table class="table  table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      
      <tr>
        <td>
      <%= link_to friend.first_name + ' ' + friend.last_name, friend, class:"btn btn-info" %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitterf %></td>
        <td><%= link_to 'Delete', friend, class:"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-dark" %>
<% else %>
<h1>Hello world !</h1>
<p>This is my reword for insistence to do this insanely hard installation</p>
<% end %>